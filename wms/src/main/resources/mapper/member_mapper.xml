<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="wms.mapper.member_mapper">

 	<!-- 회원기입 -->
	<insert id="member_join" parameterType="String">
		insert into member values ('0', #{mpart}, #{mspot}, #{mname}, #{mjob}, #{mid}, #{mpass}, #{memail}, #{mhp},'대기', now())
	</insert>

	 <!-- 
		insert into member values ('0', '최고관리자', '최고관리자', '최고관리자', '최고관리자', 'admin', 'admin', 'admin@webmaster.com', '01012345678','승인', now())
	 -->
	 
	 
	 <!-- 중복체크 -->
	<select id="search_id" resultType="String" parameterType="String">
		select count(*) as ctn from member where mid=#{mid} order by midx desc 
	</select>
	
	
	
	<!-- 로그인 -->
	 <select id="login_id" resultType="DTO.member_DTO"> 
		select mpart, mspot, mid, mpass, mname, memail from member where mid=#{mid}
	</select>
	 

</mapper>